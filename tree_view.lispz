(using [net list message]

  (ref replace (lambda [component tree]
    (ref address (+ "tree-view/" component "/replace-tree"))
    (message.send address tree)
  ))

  (ref update (lambda [component base branch]
    (ref address (+ "tree-view/" component "/update-branch"))
    (message.send address { base branch })
  ))

  (export { replace update })
)
